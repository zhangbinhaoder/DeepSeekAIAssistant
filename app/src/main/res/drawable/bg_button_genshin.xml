<?xml version="1.0" encoding="utf-8"?>
<!-- 原神风格按钮背景 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/genshin_gold_dark"
                android:endColor="@color/genshin_gold" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- 正常状态 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/genshin_gold"
                android:endColor="@color/genshin_gold_light" />
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="@color/genshin_gold_dark" />
        </shape>
    </item>
</selector>
